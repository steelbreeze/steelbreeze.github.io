@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500');

:root {
	--display4: {
		font-family: 'Roboto', sans-serif;
		font-weight: 300;
		font-size: 112px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	.display3 {
		font-family: 'Roboto', sans-serif;
		font-weight: 400;
		font-size: 56px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	.display2 {
		font-family: 'Roboto', sans-serif;
		font-weight: 400;
		font-size: 45px;
		line-height: 48px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	.display1 {
		font-family: 'Roboto', sans-serif;
		font-weight: 400;
		font-size: 34px;
		line-height: 40px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	.headline {
		font-family: 'Roboto', sans-serif;
		font-weight: 400;
		font-size: 24px;
		line-height: 32px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	.title {
		font-family: 'Roboto', sans-serif;
		font-weight: 500;
		font-size: 20px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	.subheading {
		font-family: 'Roboto', sans-serif;
		font-weight: 400;
		font-size: 16px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	.body2 {
		font-family: 'Roboto', sans-serif;
		font-weight: 500;
		font-size: 14px;
		line-height: 24px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	p, .body1 {
		font-family: 'Roboto', sans-serif;
		font-weight: 300;
		font-size: 14px;
		line-height: 20px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	.caption {
		font-family: 'Roboto', sans-serif;
		font-weight: 400;
		font-size: 12px;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}

	.button {
		font-family: 'Roboto', sans-serif;
		font-weight: 500;
		font-size: 14px;
		text-transform: uppercase;
		color: rgba(0, 0, 0, .87);
		-webkit-font-smoothing: antialiased;
	}
}

h1 {
	@include display4;
}